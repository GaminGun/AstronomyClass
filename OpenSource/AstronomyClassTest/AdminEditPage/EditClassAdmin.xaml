<Page x:Class="AstronomyClassTest.EditClassAdmin"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AstronomyClassTest"
      mc:Ignorable="d" FontSize="20"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="EditClassAdmin">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0">
            <DockPanel Margin="10">
                <TextBlock Text="Номер класса" Width="170"/>
                <TextBox Text="{Binding id}"/>
            </DockPanel>
            <DockPanel Margin="10">
                <TextBlock Text="Название класса" Width="170"/>
                <TextBox Text="{Binding name_class}"/>
            </DockPanel>
        </StackPanel>
        <DockPanel Grid.Row="1" HorizontalAlignment="Center">
            <Button x:Name="CancelBtn" Content="Отмена" Width="150" Margin="10 5" Click="CancelBtn_Click"/>
            <Button x:Name="SaveBtn" Content="Сохранить" Width="150" Margin="10 5" Click="SaveBtn_Click"/>
        </DockPanel>
    </Grid>
</Page>
